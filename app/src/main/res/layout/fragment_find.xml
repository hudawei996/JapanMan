<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f2"
    tools:context=".ui.main.MainActivity">

    <com.fungo.banner.BannerView
        android:id="@+id/bannerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="12dp"
        app:bannerAutoLoop="false"
        app:bannerFarMargin="0dp"
        app:bannerPageAlpha="0.8"
        app:bannerPageMode="far"
        app:bannerPagePadding="@dimen/dp_24"
        app:bannerPageScale="0.8"
        app:bannerSlideAnim="false"
        app:indicatorVisible="false" />

</androidx.constraintlayout.widget.ConstraintLayout>